<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        style="@style/TextStyle"
        android:text="@string/Welcome"
        />

    <TextView
        style="@style/TextStyle"
        android:text="@string/Authorization"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Prepod"
            android:textColor="@color/BLACK"
            android:id="@+id/choose_prepod"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Student"
            android:textColor="@color/BLACK"
            android:id="@+id/choose_student"/>

    </LinearLayout>

    <TextView
        style="@style/TextStyleInvisible"
        android:text="@string/Enter_FIO"
        android:id="@+id/text_enter_fio"
        />

    <EditText
        style="@style/TextStyleInvisible"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/enter_fio"
        android:inputType="textCapWords"/>

    <TextView
        style="@style/TextStyleInvisible"
        android:text="@string/Enter_Password"
        android:id="@+id/text_enter_password"
        />

    <EditText
        style="@style/TextStyleInvisible"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/enter_password"
        android:inputType="textCapWords"/>

    <Button
        style="@style/TextStyleInvisible"
        android:text="@string/Login_button"
        android:textSize="16sp"
        android:id="@+id/login_button"
        />

    <TextView
        style="@style/TextStyleInvisible"
        android:textColor="@color/RED"
        android:id="@+id/error_text"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/login_progressbar"
        android:layout_gravity="center"/>

</LinearLayout>